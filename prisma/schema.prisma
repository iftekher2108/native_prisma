generator client {
  provider = "prisma-client-js"
  previewFeatures = ["reactNative"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./app.db"
}

enum Role {
  admin
  manager
  user
}

model User {
  id        String @id @default(uuid())
  name      String
  email     String @unique
  password  String
  bio       String?
  role      Role @default(user)
  isActive    Boolean @default(true)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}